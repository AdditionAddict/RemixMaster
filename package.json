{
  "name": "remix-master",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "bunx biome lint --write .",
    "format": "bunx biome format --write .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:setup": "bun run db:setup-docker && bun run db:setup-schema && bun run db:setup-seed",
    "db:setup-docker": "chmod +x ./db/start-database.sh && ./db/start-database.sh",
    "db:setup-schema": "drizzle-kit push --config db/drizzle.config.ts --force",
    "db:setup-seed": "PGPASSWORD=password unzip db/seed.sql.zip && psql -h localhost -d remix-master -U postgres -f ./db/seed.sql",
    "db:push": "drizzle-kit push --config db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config db/drizzle.config.ts",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:run": "CI=true playwright test"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/serve": "^2.13.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "isbot": "^4.1.0",
    "lucide-react": "^0.453.0",
    "pg": "^8.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.48.1",
    "@remix-run/dev": "^2.13.1",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.26.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.1",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
